{
    "name": "PyTorch WaveFlow",
    "arch": {
        "type": "WaveFlow",
        "args": {
            "flows": 8,
            "n_group": 64,
            "n_mels": 80,
            "use_conv1x1": false,
            "memory_efficient": false,
            "reverse_mode": false,
            "dilation_channels": 64,
            "residual_channels": 64,
            "skip_channels": 64,
            "bias": false
        }
    },
    "dataset": {
        "type": "RandomWAVDataset",
        "args": {
            "data_dir": "~/data-disk/Datasets/LJ/train/",
            "size": 80000,
            "segment": 16000,
            "deterministic": false
        }
    },
    "data_loader": {
        "batch_size": 8,
        "shuffle": false,
        "num_workers": 4,
        "prefetch_factor": 2,
        "pin_memory": true
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0002,
            "weight_decay": 0
        }
    },
    "loss": {
        "type": "WaveGlowLoss",
        "args": {
            "sigma": 1.0,
            "elementwise_mean": true
        }
    },
    "conditioner": {
        "type": "MelSpec",
        "args": {
            "sr": 22050,
            "n_fft": 1024,
            "hop_length": 256,
            "n_mels": 80
        }
    }
}