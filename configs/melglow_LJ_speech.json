{
    "name": "PyTorch MelGlow",
    "n_gpu": 1,
    "arch": {
        "type": "MelGlow",
        "args": {
            "flows": 12,
            "n_group": 8,
            "n_early_every": 4,
            "n_early_size": 2,
            "hop_size": 256,
            "n_mels": 80,
            "reverse_mode": false,
            "dilation_channels": 48,
            "residual_channels": 48,
            "skip_channels": 48,
            "depth": 7,
            "radix": 3,
            "predict_channels": 64,
            "predict_layers": 3,
            "bias": false
        }
    },
    "dataset": {
        "type": "RandomWAVDataset",
        "args": {
            "data_dir": "~/data-disk/Datasets/LJSpeech-1.1/wavs/",
            "size": 80000,
            "segment": 22016
        }
    },
    "data_loader": {
        "batch_size": 8,
        "shuffle": true,
        "num_workers": 4,
        "prefetch_factor": 4,
        "pin_memory": true
    },
    "lightning": {
        "lr": 1e-4
    },
    "loss": {
        "type": "WaveGlowLoss",
        "args": {
            "sigma": 0.7,
            "elementwise_mean": true
        }
    },
    "conditioner": {
        "type": "MelSpec",
        "args": {
            "sr": 22050,
            "n_fft": 1024,
            "hop_length": 256,
            "f_min": 60,
            "f_max": 7600,
            "n_mels": 80
        }
    }
}