{
  "name": "PyTorch WaveGlow",
  "n_gpu": 1,
  "arch": {
    "type": "WaveGlow",
    "args": {
      "flows": 12,
      "n_group": 8,
      "n_early_every": 4,
      "n_early_size": 2,
      "sr": 22050,
      "window_size": 1024,
      "hop_size": 256,
      "n_mels": 80,
      "memory_efficient": true,
      "dilation_channels": 256,
      "residual_channels": 256,
      "skip_channels": 256,
      "depth": 5,
      "radix": 3,
      "bias": false
    }
  },
  "data_loader": {
    "type": "RandomWaveFileLoader",
    "args": {
      "data_dir": "/media/ycy/86A4D88BA4D87F5D/DataSet/LJSpeech-1.1/wavs",
      "batch_size": 24,
      "num_workers": 1,
      "segment": 16000
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-4
    }
  },
  "loss": {
    "type": "WaveGlowLoss",
    "args": {
      "sigma": 0.7,
      "elementwise_mean": true
    }
  },
  "metrics": [
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 10000,
      "gamma": 0.1
    }
  },
  "trainer": {
    "steps": 580000,
    "save_dir": "/media/ycy/86A4D88BA4D87F5D/DataSet/waveglow-result/",
    "save_freq": 50,
    "verbosity": 2
  },
  "visualization": {
    "tensorboardX": true,
    "log_dir": "/media/ycy/86A4D88BA4D87F5D/DataSet/waveglow-result/runs"
  }
}
